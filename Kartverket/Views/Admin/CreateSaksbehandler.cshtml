@model CreateSaksbehandlerViewModel

<h1 class="green-text">Opprett en Saksbehandler</h1>

<form asp-action="CreateSaksbehandler" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="green-text"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="green-text"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="green-text"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
