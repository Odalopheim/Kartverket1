@model Kartverket.Models.UserData

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        h1 {
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>Registration Form</h1>
    <form asp-action="OpprettBruker" method="post">
        <div>
            <label asp-for="Name" class="form-label mt-4">Name</label>
            <input asp-for="Name" class="form-control" id="exampleInputName" placeholder="Enter Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Email" class="form-label mt-4">Email address</label>
            <input asp-for="Email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Address" class="form-label mt-4">Your address:</label>
            <input asp-for="Address" class="form-control" id="exampleInputAddress" placeholder="Enter Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <br />

        <button type="submit" class="btn btn-success">OK</button>
    </form>

    <br />
    <a asp-controller="Home" asp-action="RegisterAreaChange" class="text-info">Eller fortsett som gjest</a>

    <!-- Validasjonsskript -->
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.7/jquery.validate.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.7/jquery.validate.unobtrusive.js"></script>
</body>
</html>
